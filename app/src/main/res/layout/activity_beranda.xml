<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Salam -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang Arrafi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:elevation="2dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Mencari"
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/loupe"
                    android:tint="#888888" />
            </LinearLayout>

            <!-- Tonton & Belajar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tonton & Belajar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <include layout="@layout/item_video_card"
                android:layout_marginBottom="8dp" />
            <include layout="@layout/item_video_card"
                android:layout_marginBottom="24dp" />

            <!-- Kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Desain Grafis"
                        android:background="@drawable/button_category"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:paddingHorizontal="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Pemograman"
                        android:background="@drawable/button_category"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:paddingHorizontal="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Alat"
                        android:background="@drawable/button_category"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:paddingHorizontal="16dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Disarankan Untukmu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disarankan Untukmu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Grid item -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp">

                <include layout="@layout/item_grid_card" />
                <include layout="@layout/item_grid_card" />
                <include layout="@layout/item_grid_card" />
                <include layout="@layout/item_grid_card" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:tint="#000000" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/chat"
            android:background="@android:color/transparent"
            android:contentDescription="Chat"
            android:tint="#000000" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:background="@android:color/transparent"
            android:contentDescription="Profile"
            android:tint="#000000" />
    </LinearLayout>
</RelativeLayout>
